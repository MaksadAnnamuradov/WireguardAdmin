@model Login
@{
    ViewData["Title"] = "Login";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">Welcome</span>
    </div>
    <div class="m-4 p-4">
        <div class="text-danger" asp-validation-summary="All"></div>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <span class="text-danger">
                @ViewBag.Message
            </span>
        }
        @Html.HiddenFor(x => x.ReturnUrl)

        <form asp-action="Login" method="post" asp-controller="Account">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Username"></label>
                <div asp-validation-for="Username" class="text-danger"></div>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div asp-validation-for="Password" class="text-danger"></div>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="RememberLogin" /> @Html.DisplayNameFor(model => model.RememberLogin)
                    </label>
                </div>
            </div>

            <button class="btn btn-primary" type="submit">Log In</button>
        </form>

         @*<a class="nav-link text-dark"  asp-controller="Account" asp-action="ExternalLogin">Login With Google</a>*@

         <a href="https://maksad-dev.us.auth0.com/authorize?
              response_type=code&
              client_id=9VjQfhrZAZgFeTYbZwbNDvSvTgMtDC2M&
              redirect_uri=https://localhost:5001/index&
              scope=appointments%20contacts&
              audience=https://maksad-dev.us.auth0.com/api/v2/&
              state=xyzABC123">
              Sign In
        </a>

    </div>
</body>
</html>