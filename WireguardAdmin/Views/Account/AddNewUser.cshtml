@model SignupModel
@{
    ViewData["Title"] = "AddNewUser";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add New User</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">Wireguard</span>
    </div>
    <div class="m-1 p-1">
        <div class="text-danger" asp-validation-summary="All"></div>

        <form asp-action="AddNewUser" method="post">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <div asp-validation-for="UserName" class="text-danger"></div>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div asp-validation-for="Password" class="text-danger"></div>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <div asp-validation-for="ConfirmPassword" class="text-danger"></div>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>
            <button class="btn btn-primary" type="submit">Sign Up</button>
        </form>
    </div>
</body>
</html>